<section class="tabs">
  <div class="row">
    <ul class="tab-nav">
      <li class="active"><a href="#">Basic information</a></li>
      <li><a href="#">Mail aliases</a></li>
      <li><a href="#">Privileges</a></li>
    </ul>
  </div>

  <%= form_for @user, url: users_update_path do | form | %>
  <div class="tab-content active">
    <div class="row">
      <p class="field ten columns">
        <%= form.label 'Username (read-only):' %>
        <%= form.text_field :uid, :class => 'input', :readonly => true %>
      </p>
    </div>

    <div class="row">
      <p class="field ten columns">
        <%= form.label 'Email address:' %>
        <%= form.text_field :mail, :class => 'input' %>
      </p>
    </div>

    <div class="row">
      <%= form.label 'Full name:' %>
    </div>

    <div class="row">
      <p class="field five columns">
        <%= form.text_field :givenName, :class => 'input', :placeholder => 'First name' %>
      </p>
      <p class="field five columns">
      <%= form.text_field :sn, :class => 'input', :placeholder => 'Last name' %>
      </p>
    </div>

    <div class="row">
      <p class="field ten columns">
        <%= form.label 'New password:' %>
        <%= form.password_field :userPassword, :class => 'input' %>
      </p>
    </div>
    <div class="row">
      <p class="field ten columns">
        <%= form.label 'Quota soft:' %>
        <%= form.text_field :zarafaQuotaSoft, :class => 'input' %>
      </p>
    </div>
    <div class="row">
      <p class="field ten columns">
        <%= form.label 'Quota hard:' %>
        <%= form.text_field :zarafaQuotaHard, :class => 'input' %>
      </p>
    </div>
  </div>

  <div class="tab-content">
    <div class="row">
      <%= form.label 'Aliases:', :class => 'eight columns' %>
      <p class="small default btn two columns"><a href="#" data-aliastoggle>Add an alias</a></p>
    </div>
      
    <div class="row">
      <div class="twelve columns field">
        <ul>
          <% @user.zarafaAliases(true).each do | mailalias | %>
            <li class="row">
              <%= form.text_field :zarafaAliases, :multiple => true, :value => mailalias, :class => 'input ten columns', 'data-aliasfield' => 'test' %>
              <div class="small default btn two columns icon-left entypo icon-cancel-circled"><a href="#" class="aliasremove">Remove alias</a></div>
            </li>
          <% end %>

          <li class="row">
            <%= form.text_field :zarafaAliases, :multiple => true, :value => '', :class => 'input ten columns', 'data-aliasfield' => 'test' %>
            <div class="small default btn two columns icon-left entypo icon-cancel-circled"><a href="#" class="aliasremove">Remove alias</a></div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <div class="tab-content">
    <div class="row">
      <p>
      <%= form.label 'Admin:', :class => 'inline' %>
        <%= form.check_box :zarafaAdmin %>
      </p>
    </div>

    <div class="row">
      <p>
      <%= form.label 'Hidden from addressbook:', :class => 'inline' %>
        <%= form.check_box :zarafaHidden %>
      </p>
    </div>

    <div class="row">
      <%= form.label '"Send as" privilege:', :class => 'eight columns' %>
      <%= form.hidden_field :authenticity_token, :value => form_authenticity_token %>
    </div>

    <div class="row">
      <div class="twelve columns field">
        <ul>
          <li class="row">
            <%= form.text_field :zarafaSendAsPrivilege, :multiple => true, :value => @user.zarafaSendAsPrivilege, :class => 'ten columns', 'data-sendasfield' => 'test' %>
          </li>
        </ul>
      </div>
    </div>
  </div>
  </div>
</div>

<div class="row">
  <p class="medium primary btn"><%= form.submit "Save #{@user.uid}" %>
</div>
<% end %>
