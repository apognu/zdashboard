<div class="row">
  <form id="search_users"><p class="field six columns">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <input type="text" name="search" placeholder="Look for users..." class="input" autofocus autocomplete="off" />
  </form>
  <p class="medium primary btn icon-left entypo icon-plus-circled right-button"><%= link_to 'Create a new user', users_new_path %></p>
</div>

<div class="row" id="users_list">
  <table class="striped">
    <thead>
      <tr>
        <th>Username</th>
        <th>Full name</th>
        <th>E-mail address</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render :partial => "users" %>
    </tbody>
  </table>

</div>
