<div class="row">
  <p class="medium primary btn icon-left entypo icon-plus-circled right-button"><%= link_to 'Create a new group', groups_new_path %></p>
</div>

<div class="row">
  <table class="striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Group email address</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do | group | %>
      <tr>
        <td><%= link_to(group.cn, groups_edit_path(:cn => group.cn)) %></td>
        <td><%= group.mail %></td>
        <td><div class="small danger btn icon-left entypo icon-cancel-circled"><%= link_to('Delete', groups_delete_path(:cn => group.cn)) %></div></td>
      </tr>
      <% end %>
    </tbody>
    <p>Pages :
      <% params[:page] = "1" if params[:page].nil? %>
      <% @pages.each do | page | %>
        <%= link_to(page, groups_path({ :page => page }), :class => params[:page] == page.to_s ? "primary label" : "default label") %>
      <% end %>
    </p>
  </table>
</div>
